<script src="<%= asset_path('custom.js') %>" type="module"></script>
<div class="container mt-5">
	<div class="row">
		  <h1 class="mb-4 text-center text-success">Search your Breed</h1>
		<div class="col-md-6">
		  <%= form_with(url: fetch_dog_info_dog_breeds_path, method: :get, class: 'edit-form', remote: false, id: 'dog-breed-form') do |form| %>
		    <div class="mb-3">
		      <%= form.label :name, class: 'form-label' %>
		      <%= form.text_field :name, class: 'form-control', required: true %>
		    </div>
		    <%= form.submit "Submit", class: 'btn btn-primary', id: 'submit-btn' %>
		  <% end %>
		</div>
      <div class="col-md-6" style="width: 500px; height: 500px;">
		    <div id="dog-breed-result" class="col-md-6"style="width: 100%; height: 100%;">
			    <!-- Dog image will be displayed here -->
			  </div>
	    </div>
	</div>
</div>
