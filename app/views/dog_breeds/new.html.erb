<div class="container mt-5">
  <h1 class="mb-4">Dog Breed Form</h1>
  <%= form_with(model: @dog_breed, remote: true, authenticity_token: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>
    <%= form.submit "Submit", class: 'btn btn-primary' %>
  <% end %>

  <div id="dog-breed-result" class="mt-4"></div>
</div>

<script>
  document.addEventListener('ajax:success', function(event) {
    var data = event.detail[0];
    var resultDiv = document.getElementById('dog-breed-result');
    resultDiv.innerHTML = '<h2>Result:</h2><p><strong>Name:</strong> ' + data.name + '</p><img src="' + data.image_url + '" alt="' + data.name + '">';
  });
</script>
